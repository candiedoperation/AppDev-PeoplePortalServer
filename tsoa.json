{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "spec": {
    "outputDirectory": "dist",
    "specVersion": 3,

    "securityDefinitions": {
      "oidc": {
        "type": "oauth2",
        "authorizationUrl": "http://localhost:9000",
        "flow": "implicit",
        "scopes": {

        }
      }
    }
  },
  "routes": {
    "routesDir": "src",
    "authenticationModule": "src/auth.ts"
  }
}