{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "spec": {
    "outputDirectory": "dist",
    "specVersion": 3,

    "securityDefinitions": {
      "oidc": {
        "type": "openIdConnect",
        "openIdConnectUrl": "https://localhost:9443/application/o/swagger-test/.well-known/openid-configuration"
        
      }
    }
  },
  "routes": {
    "routesDir": "src",
    "authenticationModule": "src/auth.ts"
  }
}